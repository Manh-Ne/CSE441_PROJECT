<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Book Cover -->
    <ImageView
        android:id="@+id/bookCover"
        android:layout_width="90dp"
        android:layout_height="135dp"
        android:contentDescription="TODO"
        android:scaleType="centerCrop" />

    <!-- Book Information -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/bookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhà Giả Kim"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paulo Coelho"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bookProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5% đã đọc"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <!-- ProgressBar for reading progress -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="5"
            android:progressTint="#00897B" />
    </LinearLayout>

    <!-- Container for Favorite and More Icons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="vertical">

        <!-- More Icon -->
        <ImageView
            android:id="@+id/moreIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:src="@drawable/ic_more" />

        <!-- Favorite Icon -->
        <ImageView
            android:id="@+id/favoriteIcon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_like_state" />



    </LinearLayout>

</LinearLayout>
