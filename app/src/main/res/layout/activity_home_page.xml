<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_teal"
    tools:context=".HomePage"
    tools:ignore="ExtraText">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ergon xin chào!"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="20dp" />


            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_search"
                android:layout_marginTop="10dp"
                app:tint="@color/white"
                android:background="@color/gray"
                android:layout_gravity="end"/>


            <LinearLayout
                android:id="@+id/title_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/gray"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:paddingBottom="30dp">

                <ImageView
                    android:id="@+id/featured_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@color/white"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/stevejob" />

                <TextView
                    android:id="@+id/featured_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:text="Tiểu sử Steve Jobs"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/quick_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="100dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ic_ebook"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/button_green"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/layer"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ebook"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="100dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ic_van_hoc"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/blue"
                        android:layout_marginBottom="5dp"
                        app:tint="@color/white"
                        android:src="@drawable/layer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Văn học"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ic_ki_nang"
                        android:layout_width="60dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="60dp"
                        android:background="@color/yellow"
                        app:tint="@color/white"
                        android:src="@drawable/layer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tư duy"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_trending_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trending"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="16dp" />


            <HorizontalScrollView
                android:id="@+id/trending_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:paddingBottom="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/trending_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_trending_book_1"
                            android:layout_width="70dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="8dp"
                            android:background="@color/white"
                            android:src="@drawable/nhagiakim" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Nhà Giả Kim"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_trending_book_2"
                            android:layout_width="70dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="8dp"
                            android:background="@color/white"
                            android:src="@drawable/tuduy" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_trending_book_3"
                            android:layout_width="70dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="8dp"
                            android:background="@color/white"
                            android:src="@drawable/tuduy" />


                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/txt_dexuat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đề xuất dành cho bạn"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="16dp" />

            <HorizontalScrollView
                android:id="@+id/dexuat_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:paddingBottom="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/dexuat_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="16dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_dexuat_book_1"
                            android:layout_width="70dp"
                            android:layout_height="100dp"
                            android:src="@drawable/nhagiakim"
                            android:background="@color/white"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhà Giả Kim"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="16dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_dexuat_book_2"
                            android:layout_width="70dp"
                            android:layout_height="100dp"
                            android:src="@drawable/tuduy"
                            android:background="@color/white"
                            android:layout_marginBottom="8dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="16dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_dexuat_book_3"
                            android:layout_width="70dp"
                            android:layout_height="100dp"
                            android:src="@drawable/tuduy"
                            android:background="@color/white"
                            android:layout_marginBottom="8dp" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>
