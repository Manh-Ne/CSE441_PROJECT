<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#357C97"
    android:orientation="vertical"
    tools:context="com.cse441.ergon.ui.LoginActivity">


    <ImageButton
        android:id="@+id/imgbtnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/teal_700"
        app:srcCompat="@drawable/baseline_arrow_back_ios_new_24" />

    <TextView
        android:id="@+id/tVNhapPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:fontFamily="@font/bevietnampro_bold"
        android:text="Đăng nhập"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Trường nhập tài khoản -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <TableRow
            android:layout_width="269dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/rounded_background_2">

            <EditText
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="45sp"
                android:layout_marginStart="20sp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/bevietnampro_regular"
                android:hint="Tài khoản"
                android:inputType="text"
                android:textColorHint="#8FC1D3" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/rounded_background_2">

            <EditText
                android:id="@+id/pass"
                android:layout_width="wrap_content"
                android:layout_height="45sp"
                android:layout_marginStart="20sp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/bevietnampro_regular"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:textColorHint="#8FC1D3" />

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#00B894"
            android:fontFamily="@font/bevietnampro_semibold"
            android:text="Đăng nhập" />

        <Button
            android:id="@+id/btnNoUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:backgroundTint="#00B894"
            android:fontFamily="@font/bevietnampro_semibold"
            android:text="Đăng ký" />

    </LinearLayout>

</LinearLayout>