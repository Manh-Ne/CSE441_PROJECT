<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#357C97"
    tools:context="com.example.project.Login">


    <ImageButton
        android:id="@+id/imgbtnBack"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/teal_700"
        android:background="@drawable/circle_background"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/tVNhapPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Hãy nhập mật khẩu của bạn" />

    <!-- Trường nhập tài khoản -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <!-- Nhập tài khoản -->
        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_button_background"
            android:hint="Nhập tài khoản"
            android:inputType="text"
            android:layout_margin="10dp"
            android:textColor="@color/black"/>

        <!-- Nhập mật khẩu -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_button_background"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:layout_margin="10dp"
            android:textColor="@color/black"/>

    </LinearLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#55EFC4"
        android:text="Đăng nhập" />
    <Button
        android:id="@+id/btnNoUser"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#55EFC4"
        android:text="Chưa có tài khoản" />
</LinearLayout>