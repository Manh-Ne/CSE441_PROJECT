<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_teal"
    tools:ignore="ExtraText">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="match_parent"
        app:layout_constraintHeight_default="wrap"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:text="Ergon xin chào!"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/border_icon_search"
                android:padding="7dp"
                android:src="@drawable/ic_search"
                app:tint="@color/white" />
        </LinearLayout>



            <LinearLayout
                android:id="@+id/title_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/border_icon_title2"
                android:orientation="horizontal"
                android:padding="25dp">

                <ImageView
                    android:id="@+id/featured_image"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/border_icon_title2"
                    android:src="@drawable/stevejob" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/featured_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiểu sử Steve Jobs"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/featured_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="25dp"
                        android:text="Đổi mới là yếu tố khác biệt giữa người tiên phong và những kẻ bắt chước"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/quick_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ic_ebook"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/border_icon_ebook"
                        android:padding="16dp"
                        android:src="@drawable/layer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Ebook"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ic_van_hoc"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/border_icon_vanhoc"
                        android:padding="16dp"
                        android:src="@drawable/layer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Văn học"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ic_ki_nang"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/border_icon_tuduy"
                        android:padding="16dp"
                        android:src="@drawable/layer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tư duy"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_trending_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trending"
                    android:textColor="@color/white"
                    android:paddingLeft="20dp"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_trending"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:scrollbars="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingBottom="16dp" />

                <TextView
                    android:id="@+id/txt_dexuat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đề xuất dành cho bạn"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="0dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_dexuat"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"

                    android:paddingLeft="20dp"
                    android:scrollbars="horizontal"
                    android:paddingBottom="16dp" />
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
