<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear_background"
    tools:context=".BookDetail">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/IconCLose"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/background_button"
                    android:contentDescription="Back"
                    android:padding="12dp"
                    android:src="@drawable/icon_close"
                    app:tint="@color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/IconShare"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="Share"
                        android:padding="5dp"
                        android:src="@drawable/ic_hierarchy2"
                        app:tint="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/bookCoverDetail"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nhagiakim" />

            <LinearLayout
                android:id="@+id/bookInfoSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:background="@drawable/border_rounded"
                android:elevation="8dp"
                android:orientation="vertical"
                android:paddingHorizontal="25dp"
                android:paddingVertical="15dp">

                <TextView
                    android:id="@+id/bookTitleDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/bevietnampro_bold"
                    android:text="Nhà Giả Kim"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="10sp"
                        android:src="@drawable/canhan_f"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/bookAuthorDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bevietnampro_regular"
                        android:text="Paulo Coelho"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="10sp"
                        android:src="@drawable/textalignleft"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/bookGenreDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bevietnampro_regular"
                        android:text="Văn học, Tiểu thuyết"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="10sp"
                        android:src="@drawable/star1"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/bookRatingDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bevietnampro_regular"
                        android:text="5.0 (10 Nhận xét)"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="10sp"
                        android:src="@drawable/archive"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/bookPriceDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Miễn phí - Bạn có thể thêm vào thư viện và đọc trọn vẹn cuốn sách miễn phí"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="10sp"
                        android:src="@drawable/archive"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/bookDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="Tác phẩm tiếp nối 'Sapiens', dự đoán về tương lai của loài người với sự phát triển của trí tuệ nhân tạo và công nghệ sinh học."
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/readButton"
                    android:layout_width="325dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#55EFC4"
                    android:text="Đọc"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/addLibrary"
                    android:layout_width="325dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"
                    android:text="Thêm vào thư viện"
                    android:textColor="@color/dark_teal" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
