<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#357C97"
    tools:context=".EnterSDT">


    <ImageButton
        android:id="@+id/imgbtnBackSDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_background"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/baseline_arrow_back_ios_new_24" />

    <TextView
        android:id="@+id/tVNhapSDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Hãy nhập số điện thoại của bạn" />

    <!-- Dropdown for selecting country code -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button_background"
        android:padding="10dp"
        android:gravity="center_vertical">

        <Spinner
            android:id="@+id/countryCodeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:spinnerMode="dropdown"
            android:popupBackground="#FFFFFF"/>

        <EditText
            android:id="@+id/phoneNumberEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nhập số điện thoại"
            android:textColor="@color/black"
            android:inputType="phone"/>
    </LinearLayout>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chúng tôi sẽ gửi mã kích hoạt tới số điện thoại mà bạn cung cấp!"
        android:gravity="start"
        android:padding="20dp"
        android:alpha="0.5"
        android:textSize="17sp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnContinueSDT"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:backgroundTint="#55EFC4"
        android:text="Tiếp tục" />
</LinearLayout>